{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "nicothekid:clam",
      "population_control": "animal"
    },
    "conditions": [
      {
        "minecraft:weight": {
          "default": 5
        },
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_underwater": {},
        "minecraft:biome_filter": [
          {
            "all_of": [
              {
                "any_of": [
                  {
                    "test": "has_biome_tag",
                    "operator": "==",
                    "value": "ocean"
                  }
                ]
              }
            ]
          }
        ],
        "minecraft:herd": {
          "min_size": 1,
          "max_size": 1
        },
        "minecraft:density_limit": {
          "surface": 2,
          "underground": 0
        }
      }
    ]
  }
}